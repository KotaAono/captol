#:kivy 2.0.0
<Tab>:
    size_hint: 1., 1.
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Clip'
        FloatLayout:
            size_hint: 1., 1.
            Label:
                text: 'Folder'
                size: self.size
                # pos_hint: {'x': .1, 'top': .125}
            Label:
                text: root.folder
                size: self.size
                pos_hint: {'x': .2, 'top': .25}
            Label:
                text: 'Capture area'
                size: self.size
                pos_hint: {'x': .25, 'top': .375}
    TabbedPanelItem:
        text: 'Save'
        BoxLayout:
            Label:
                text: 'Second tab content area'
            Button:
                text: 'Button that does nothing'
